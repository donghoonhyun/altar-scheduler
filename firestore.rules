rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ğŸ”’ í—¬í¼ í•¨ìˆ˜
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    function isSuperAdmin() {
      let globalAdminPath = /databases/$(database)/documents/memberships/$(request.auth.uid + '_global');
      return isSignedIn() && exists(globalAdminPath) && 'superadmin' in get(globalAdminPath).data.role;
    }
    function isGroupAdmin(groupId) {
      let membershipPath = /databases/$(database)/documents/memberships/$(request.auth.uid + '_' + groupId);
      return isSignedIn() && exists(membershipPath) && 'admin' in get(membershipPath).data.role;
    }

    // 1ï¸âƒ£ Users: í”„ë¡œí•„ì€ ëˆ„êµ¬ë‚˜ ì½ê¸° ê°€ëŠ¥, ìˆ˜ì •ì€ ë³¸ì¸ ë˜ëŠ” ìŠˆí¼ì–´ë“œë¯¼
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); // ì‹ ê·œ ê°€ì… ì‹œ í•„ìš”
      allow update, delete: if isOwner(userId) || isSuperAdmin();
