      }

      // ë³µì‚¬ë‹¨ì›(members) ë“±ë¡ì€ ë¡œê·¸ì¸í•œ ì‚¬ìš©ìë©´ ëˆ„êµ¬ë‚˜ ê°€ëŠ¥ (ìŠ¹ì¸ ëŒ€ê¸° ìƒíƒœë¡œ ìƒì„±)
      match /members/{memberId} {
        allow create: if isSignedIn() && request.resource.data.parent_uid == request.auth.uid;
      }
    }
    
    // 3.5ï¸âƒ£ Collection Group 'members' ì¿¼ë¦¬ í—ˆìš© (í•„ìˆ˜)
    match /{path=**}/members/{memberId} {
      allow read: if isSignedIn();
    }
    match /{path=**}/role_requests/{requestId} {
      allow read, write: if isSignedIn();
    }

    match /memberships/{membershipId} {
      allow read, write: if isSignedIn();
    }
    
    // 3.8ï¸âƒ£ Counters (ID ìƒì„±ìš©)
    match /counters/{counterId} {
