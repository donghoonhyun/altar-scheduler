      allow update, delete: if isGroupAdmin(groupId) || isSuperAdmin();
      
      // 3.1ï¸âƒ£ Availability Surveys (ì„¤ë¬¸ ì œì¶œ)
      match /availability_surveys/{surveyId} {
        allow read: if isSignedIn();
        allow update: if isSignedIn();
      }

      // í•˜ìœ„ ì»¬ë ‰ì…˜ ê¸°ë³¸ ê·œì¹™
      match /{document=**} {
        allow read: if isSignedIn();
