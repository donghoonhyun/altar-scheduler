    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); // ì‹ ê·œ ê°€ì… ì‹œ í•„ìš”
      allow update, delete: if isOwner(userId) || isSuperAdmin();
    }

    // 2ï¸âƒ£ Parishes: ì½ê¸° ì „ìš© (ê³µê°œ ì •ë³´)
    match /parishes/{parishCode} {
      allow read: if true;
      allow write: if false;
    }

    // 3ï¸âƒ£ Server Groups & Memberships
    match /server_groups/{groupId}/{document=**} {
      allow read, write: if isSignedIn();
    }
    
    // 3.5ï¸âƒ£ Collection Group 'members' ì¿¼ë¦¬ í—ˆìš© (í•„ìˆ˜)
    match /{path=**}/members/{memberId} {
