{
  "firestore": {
    "database": "(default)",
    "location": "asia-northeast3",
    "rules": "../Ordo/firestore.rules",
    "indexes": "../Ordo/firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "altar-scheduler",
      "runtime": "nodejs20",
      "region": "asia-northeast3",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        "lib/**/*.map"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "target": "ordo-altar",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "host": "127.0.0.1",
      "port": 9099
    },
    "functions": {
      "host": "127.0.0.1",
      "port": 5001
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8080,
      "dataPersistence": true
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "hosting": {
      "port": 5000
    }
  },
  "emulatorHub": {
    "enabled": true
  },
  "emulatorExport": {
    "import": "emulator-data",
    "exportOnExit": true
  }
}